<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddBookinFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="110dp"
        >

        <ImageView
            android:id="@+id/iv_room"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/room_1" />

        <TextView
            android:id="@+id/tv_room_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Room Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>


        <TextView
            android:id="@+id/tv_room_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Available"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/tv_room_book_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="23/07/2024"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:visibility="gone"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_book"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:backgroundTint="@color/green"
        android:text="Book"

        />
    <Button
        android:id="@+id/btn_cancel_booking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Booking"
        android:backgroundTint="@color/red"

        android:layout_marginTop="8dp"
        android:layout_gravity="bottom|left"
        android:layout_margin="26dp"
        />
</FrameLayout>